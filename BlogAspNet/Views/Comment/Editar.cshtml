@model BlogAspNet.Models.Comment

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar Comentário</h1>

<div class="row">
    <form class="col-md-4" method="post" asp-controller="Comment" asp-action="Editar">

        <input asp-for="Id" type="hidden" />
        <input asp-for="PostId" type="hidden" />

        <textarea asp-for="@Model.Text" class="form-control" ></textarea>

        <input asp-for="@Model.AppUserFK" type="hidden" />

        <input asp-for="@Model.PostFK" type="hidden" />

        <input asp-for="@Model.PostId" type="hidden" />

        <button class="btn btn-primary mt-4">Enviar</button>

    </form>
</div>
