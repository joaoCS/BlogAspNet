@model BlogAspNet.Models.Post

@{
    ViewData["Title"] = "Editar Post";
}

<h1>Editar Post</h1>

<p>Para inserir imagens, você terá que fazer o upload das imagens para um serviço de armazenamento de imagens online (ex: Google Fotos, Dropbox, Google Drive, Microsoft One Drive, etc...)</p>

<form class="card p-3" method="post" asp-controller="Post" asp-action="Editar">
    @Html.LabelFor(model => model.Titulo)
    @Html.TextBoxFor(model => model.Titulo)

    @Html.LabelFor(model => model.Texto)

    <script src="https://cdn.tiny.cloud/1/n6u6zdxnpvblr8bqmp34hrzw2mpnu90jwrd51jgm1w01h75h/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'advlist autolink lists link image charmap print preview hr anchor pagebreak',
            toolbar_mode: 'floating',
        });

    </script>

    @Html.TextAreaFor(model => model.Texto)

    @Html.HiddenFor(model => model.AppUserFK)

    @Html.HiddenFor(model => model.UserName)

    <button type="submit" class="btn btn-primary mt-3">Editar</button>

</form>